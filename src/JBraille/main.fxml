<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="JBraille.Controller" fx:id="grid"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="0"
        onAction="#save">Save</Button>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="1"
        onAction="#open">Open</Button>

    <TextArea fx:id="textInput" wrapText="true"
              GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"
              onKeyTyped="#keyTyped" onKeyPressed="#keyPressed" onKeyReleased="#keyReleased">
        <font>
            <Font name="Arial Black" size="72.0" />
        </font>
    </TextArea>

</GridPane>